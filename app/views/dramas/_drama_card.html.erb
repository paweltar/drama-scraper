<% @dramas.each do |drama| %>
<div
  class="card drama z-depth-3 animated fadeIn"
  id="<%= drama.id %>"
  style="
                background: linear-gradient( rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6) ), url(<%= drama.img %>) no-repeat;
                background-size: cover;
                ">
  <div class="card-content">
    <p class="card-title"><%= link_to truncate(drama.title, length: 30, separator: ' '), user_drama_path(user_id: current_user.id, id: drama.id) %></p>

    <div id="<%= drama.id %>-info-chips">
      <%= render partial: 'info_chips_partial',  locals: { drama: drama } %>
    </div>

    <p class="drama-description"><%= truncate(drama.description, length: 150, separator: ' ') %>
      <p>
      </div>
      <div class="card-action index">
        <a href=<%= drama.url %> target="_blank">Watch now</a>
        <%= link_to 'Delete', user_drama_path(user_id: current_user.id, id: drama.id), method: :delete, remote: true %>
      </div>
  </div>
<% end %>
